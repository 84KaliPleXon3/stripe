<?xml version='1.0'?>
<config
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='urn:magento:module:Df_Config:etc/system_file.xsd'
>
    <system>
        <section id='df_payment'>
            <!--
                2015-09-25
                1-я и 2-я цифры sortOrder соответствуют порядковому номеру первой буквы модуля
                в английском алфавите: https://en.wikipedia.org/wiki/English_alphabet
				3-я и 4-я цифры sortOrder соответствуют порядковому номеру второй буквы модуля
                в английском алфавите.
            -->
            <group
                id='stripe'
                translate='label'
                type='text'
                sortOrder='1920'
                showInDefault='1'
                showInWebsite='1'
                showInStore='1'
            >
                <label>Stripe</label>
                <field
                    id='enable'
                    translate='label'
                    type='Df\Framework\Data\Form\Element\Checkbox'
                    sortOrder='1'
					showInDefault='1'
					showInWebsite='1'
					showInStore='1'
                >
                    <label>Enable?</label>
					<backend_model>Df\Config\Backend\Checkbox</backend_model>
                    <comment><![CDATA[Enable the «<a href='https://mage2.pro/t/512'>Stripe</a>» payment extension?]]></comment>
                </field>
				<field
					id='title'
					translate='label'
					type='text'
					sortOrder='2'
					showInDefault='1'
					showInWebsite='1'
					showInStore='1'
				>
					<label>Title</label>
					<comment><![CDATA[It is shown on the checkout screen.]]></comment>
					<depends><field id='enable'>1</field></depends>
				</field>
				<field
					id='test'
					translate='label'
					type='Df\Framework\Data\Form\Element\Checkbox'
					sortOrder='3'
					showInDefault='1'
					showInWebsite='1'
					showInStore='1'
				>
					<label>Test Mode?</label>
					<backend_model>Df\Config\Backend\Checkbox</backend_model>
					<comment><![CDATA[<a href='https://stripe.com/docs/testing#cards'>test card numbers</a>]]></comment>
				</field>
				<field
					id='testSecretKey'
					translate='label'
					type='obscure'
					sortOrder='4'
					showInDefault='1'
					showInWebsite='1'
					showInStore='0'
				>
					<label>Test Secret Key</label>
					<comment><![CDATA[<a href='https://mage2.pro/t/726'>how to get it?</a>]]></comment>
					<backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
					<depends>
						<field id='enable'>1</field>
						<field id='test'>1</field>
					</depends>
				</field>
				<field
					id='testPublishableKey'
					translate='label'
					type='text'
					sortOrder='5'
					showInDefault='1'
					showInWebsite='1'
					showInStore='1'
				>
					<label>Test Publishable Key</label>
					<comment><![CDATA[<a href='https://mage2.pro/t/726'>how to get it?</a>]]></comment>
					<depends>
						<field id='enable'>1</field>
						<field id='test'>1</field>
					</depends>
				</field>
				<field
					id='liveSecretKey'
					translate='label'
					type='obscure'
					sortOrder='6'
					showInDefault='1'
					showInWebsite='1'
					showInStore='0'
				>
					<label>Live Secret Key</label>
					<comment><![CDATA[<a href='https://mage2.pro/t/726'>how to get it?</a>]]></comment>
					<backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
					<depends><field id='enable'>1</field></depends>
				</field>
				<field
					id='livePublishableKey'
					translate='label'
					type='text'
					sortOrder='7'
					showInDefault='1'
					showInWebsite='1'
					showInStore='1'
				>
					<label>Live Publishable Key</label>
					<comment><![CDATA[<a href='https://mage2.pro/t/726'>how to get it?</a>]]></comment>
					<depends><field id='enable'>1</field></depends>
				</field>
            </group>
        </section>
    </system>
</config>